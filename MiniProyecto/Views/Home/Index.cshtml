@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<h1>Álbumes Disponibles:</h1>
<p> </p>
<div>
    @Html.DropDownList("ddl", new SelectList(ViewBag.list, "Id", "Nombre"), new { @class = "form-control" })

    <button style="margin-top: 5%; margin-left:8%;" onClick="details()">Visualizar Album</button>

</div>

<script type="text/javascript">

    function details() {
        var idSelected = $('#ddl').val();
    location.href = '@Url.Action("Details", "Albums")?id=' + idSelected;
    }

</script>



